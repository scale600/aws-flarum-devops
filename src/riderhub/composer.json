{
    "name": "riderhub/flarum",
    "description": "RiderHub - Motorcycle Community Forum",
    "type": "project",
    "keywords": ["flarum", "forum", "motorcycle", "community"],
    "homepage": "https://riderhub.amplifyapp.com",
    "license": "MIT",
    "authors": [
        {
            "name": "RiderHub Team",
            "email": "admin@riderhub.dev"
        }
    ],
    "require": {
        "php": ">=8.1",
        "flarum/core": "^1.8",
        "flarum/approval": "*",
        "flarum/bbcode": "*",
        "flarum/emoji": "*",
        "flarum/lang-english": "*",
        "flarum/likes": "*",
        "flarum/lock": "*",
        "flarum/markdown": "*",
        "flarum/mentions": "*",
        "flarum/pusher": "*",
        "flarum/statistics": "*",
        "flarum/sticky": "*",
        "flarum/subscriptions": "*",
        "flarum/suspend": "*",
        "flarum/tags": "*",
        "bref/bref": "^2.0",
        "aws/aws-sdk-php": "^3.0",
        "vlucas/phpdotenv": "^5.0",
        "illuminate/support": "^9.0",
        "illuminate/database": "^9.0",
        "illuminate/filesystem": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "RiderHub\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RiderHub\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "flarum/extension-manager": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
