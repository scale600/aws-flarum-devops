{
  "name": "riderhub/flarum",
  "description": "RiderHub Flarum OSS Forum",
  "type": "project",
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "flarum/core": "^1.8",
    "bref/bref": "^2.0",
    "aws/aws-sdk-php": "^3.0",
    "vlucas/phpdotenv": "^5.0",
    "league/flysystem-aws-s3-v3": "^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "RiderHub\\Flarum\\": "app/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php artisan flarum:install --force"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}

