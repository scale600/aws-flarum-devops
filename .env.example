# =============================================================================
# RiderHub Flarum Environment Configuration
# =============================================================================

# Application Environment
APP_NAME="RiderHub Flarum Forum"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# Database Configuration (RDS MySQL)
DB_CONNECTION=mysql
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=3306
DB_DATABASE=flarum
DB_USERNAME=flarum
DB_PASSWORD=your-secure-password

# AWS Configuration
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-s3-bucket-name

# File Storage Configuration
FILESYSTEM_DISK=s3

# Session and Cache
SESSION_DRIVER=file
CACHE_DRIVER=file
QUEUE_CONNECTION=sync

# Mail Configuration (optional)
MAIL_DRIVER=log
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null

# Forum Configuration
FORUM_TITLE="RiderHub - Motorcycle Community"
FORUM_DESCRIPTION="A community forum for motorcycle enthusiasts"
DEFAULT_LOCALE=en
DEFAULT_TIMEZONE=UTC
ALLOW_SIGN_UP=true

# Lambda Configuration (if using serverless)
LAMBDA_TASK_ROOT=/var/task
LAMBDA_RUNTIME_DIR=/var/runtime

# Bref Configuration
BREF_BINARY_RESPONSES=1
BREF_PING_DISABLE=0

# Security
APP_KEY=base64:your-generated-app-key-here

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
